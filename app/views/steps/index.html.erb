<div class="container mt-4">

<ul id="items" style="list-style-type:none; margin:0px; padding:0px"  data-url="<%=instruction_steps_path(@instruction)%>" class="steps-cards">
    <%@steps.each do |step| %>
      <li data-id="<%= dom_id(step) %>" class="step">

        <div class="step-image" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url('<%= cl_image_path step.photo, :dpr => "auto", :responsive => true, :width => "auto", :quality=> "auto", :fetch_format=> "auto" %>')">

          <h3 class="text-white"> <%="#{step.position}" %> </h3>
        </div>

        <div class="text-muted mr-2 mb-5"> <%= "#{step.description.slice(0,17)}..."%> </div>

         <div class="step-buttons pt-0">
           <%= link_to raw("<i class=\"fas fa-edit\"></i><span class=\"badge badge-pill badge-light\">edit</span>"), edit_instruction_step_path(step.instruction_id, step.position), class: "text-primary" %>
             <%= link_to raw("<i class=\"fas fa-trash\"></i><span class=\"badge badge-pill badge-light\">delete</span>"), instruction_step_path(step.instruction_id, step.position), data: { confirm: "Are you sure you want to delete?" }, method: :delete, class: "text-danger"%>
        </div>
      </li>
    <% end %>
</ul>
</div>

  <div class="container ml-3 mb-5 mt-3 pb-5">
  <%= link_to "+ add a step",  new_instruction_step_path(@instruction), class: 'btn btn-primary' %>
  </div>





